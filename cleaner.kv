#:kivy 1.11.0
#:import NoTransition kivy.uix.screenmanager.NoTransition
#:import stopTouchApp kivy.base.stopTouchApp
#:import Factory kivy.factory.Factory




<MyPopup@Popup>:
    auto_dismiss: False
    Button:
        text: 'Close me!'
        on_release: root.dismiss()

Button:
    text: 'Open popup'
    on_release: Factory.MyPopup().open()