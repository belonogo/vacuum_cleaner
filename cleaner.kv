    Slider:
        id: engine_speed_slider
        min: 0
        max: 8000
        step: 250
        value: 0
        orientation: "vertical"
        value_track: True
        background_vertical: "Graphics/Engine/Brush_speed_line_fixed.tif"
        cursor_image: "Graphics/Engine/Brush_speed_line_adjustable.tif"
        size_hint: (0.15, 0.4)
